<odoo>
    <data noupdate="1">

        <!-- ✅ السماح للمستخدمين العاديين بقراءة ir.model -->
        <record id="access_ir_model_user" model="ir.model.access">
            <field name="name">ir.model access for users</field>
            <field name="model_id" ref="base.model_ir_model"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- ✅ السماح بقراءة الحقول -->
        <record id="access_ir_model_fields_user" model="ir.model.access">
            <field name="name">ir.model.fields access for users</field>
            <field name="model_id" ref="base.model_ir_model_fields"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>
